{% block create %}
    <turbo-stream action="append" target="auctions">
        <template>
            {% include "home/auction.html.twig"  with { 'auction': entity }%}
        </template>
    </turbo-stream>
{% endblock %}

{% block update %}
    <turbo-stream action="update" target="auction{{ id }}">
        <template>
            {% include "home/auction.html.twig"  with { 'auction': entity, 'updated': true }%}
        </template>
    </turbo-stream>
{% endblock %}

{% block remove %}
    <turbo-stream action="update" target="auction{{ id }}">
        <template>
            {% include "home/auction.html.twig" with { 'auction': entity, 'deleted': true }%}
        </template>
    </turbo-stream>
{% endblock %}